<h1> New User Sign up!</h1>

<%= form_for @user, url: {action: "create"} do |f| %>
  <div class="field">
  <%= f.label(:name, :Name) %>
  <%= f.text_field :name %>
  </div>

  <div class="field">
  <%= f.label(:password, :Password) %>
  <%= f.text_field :password %>
  </div>

  <div class="field">
  <%= f.label(:nausea, "How nauseous are you? (1-5 scale)") %>
  <%= f.number_field(:nausea, in: 1..5) %>
  </div>

  <div class="field">
  <%= f.label(:happiness, "How happy are you? (1-5 scale)") %>
  <%= f.number_field(:happiness, in: 1..5) %>
  </div>

  <div class="field">
  <%= f.label(:tickets, "How many dollars are in your pocket?") %>
  <%= f.number_field  :tickets %>
  </div>

  <div class="field">
  <%= f.label(:height, "Height (in inches)") %>
  <%= f.number_field  :height %>
  </div>

  <div class="field">
  <%= f.label(:admin, "Check box if you are a theme park owner") %>
  <%= f.check_box  :admin %>
  </div>

  <div class="actions">
   <%= f.submit "Create User" %>
 </div>
<% end %>

<a href ='/'>Back</a>
