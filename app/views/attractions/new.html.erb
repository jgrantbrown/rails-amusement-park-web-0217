<h1> Admin add a new ride </h1>


<%= form_for @attraction, url: {action: "create"} do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :tickets %>
    <%= f.text_field :tickets %>
  </div>
  <div>
    <%= f.label :nausea %>
    <%= f.text_field :nausea_rating %>
  </div>
  <div>
    <%= f.label :happiness %>
    <%= f.text_field :happiness_rating %>
  </div>
  <div>
    <%= f.label :min_height %>
    <%= f.text_field :min_height %>
  </div>
  <%= f.submit "Create Attraction" %>
<% end %>
