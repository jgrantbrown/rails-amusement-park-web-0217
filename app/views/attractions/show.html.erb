<div><label>Name </label>
  <%= @attraction.name %>
</div>

<div><label>Tickets: </label>
<%= @attraction.tickets %>
</div>

<div><label>Nausea: </label>
<%= @attraction.nausea_rating %>
</div>

<div><label>Happiness</label>
<%= @attraction.happiness_rating %>
</div>

<div><label>Min Height: </label>
<%= @attraction.min_height %>
</div>


<% if current_user.admin == true %>
    <%= link_to("Edit Attraction", edit_attraction_path ) %>
<% else %>
    <form action="/rides/new" method="post">
       <%= tag(:input, :type => "hidden", :name => request_forgery_protection_token.to_s, :value => form_authenticity_token) %>
       <%= tag(:input, :type => "hidden", :name => :attraction_id, :value => @attraction.id) %>
       <input type="submit" value="Go on this ride">
     </form>
<% end %>
